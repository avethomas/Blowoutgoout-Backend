<%= form_with(model: user, local: true) do |form| %>
<% if user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(user.errors.count, "error") %>
      prohibited this stylist from being saved:</h2>

    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <label class="label">First Name</label>
  <div class="control has-icons-left has-icons-right">
    <!-- <input class="input" type="email" placeholder="Email"> -->
    <%= form.text_field :first_name, class: 'input', placeholder: '' %>
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-exclamation-triangle" style="display: none;"></i>
    </span>
  </div>
  <p class="help is-danger" style="display: none;">This email is invalid</p>
</div>

