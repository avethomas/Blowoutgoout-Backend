<div class="section">

  <div class="container">

    <%= form_with(model: @user, url: wizard_path, method: :put) do |form| %>

    <div class="field">
      <label class="label">Phone</label>
      <div class="control">
        <%= form.telephone_field :phone, class: 'input', placeholder: 'Your phone number' %>
      </div>
    </div>

    <div class="field">
      <label class="label">Address</label>
      <div class="control">
        <%= form.text_field :address, class: 'input', placeholder: 'Street Address' %>
      </div>
    </div>

    <div class="field">
      <label class="label">City</label>
      <div class="control">
        <%= form.text_field :city, class: 'input', placeholder: 'City' %>
      </div>
    </div>

    <div class="field">
      <label class="label">State</label>
      <div class="control">
        <%= form.text_field :state, class: 'input', placeholder: 'State' %>
      </div>
    </div>

    <div class="field">
      <label class="label">Postal / Zip Code</label>
      <div class="control">
        <%= form.text_field :postal_code, class: 'input', placeholder: 'Postal / Zip Code' %>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <!-- <button class="button is-link">Submit</button> -->
        <%= form.submit 'Next', class: 'button is-link' %>
      </div>
      <div class="control">
        <%= link_to 'Skip', next_wizard_path, class: 'button is-text' %>
        <!-- <button class="button is-text">Cancel</button> -->
      </div>
    </div>

  <% end %>
  </div>
</div>
